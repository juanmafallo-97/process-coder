<div class="section-container container">
  <h1>Nuevo Producto</h1>
  <div class="form-container container">
    <form id="product-form">
      <div class="form-group">
        <label for="product-title">Nombre del producto</label>
        <input
          type="text"
          class="form-control"
          id="product-title"
          placeholder="Producto..."
          required
        />
      </div>
      <div class="form-group">
        <label for="product-price">Precio del producto</label>
        <input
          type="number"
          step="0.01"
          class="form-control"
          id="product-price"
          placeholder="Precio..."
          required
        />
      </div>
      <div class="form-group">
        <label for="product-image">URL de la imagen</label>
        <input
          type="text"
          class="form-control"
          id="product-image"
          placeholder="URL..."
          required
        />
      </div>
      <div class="m-auto text-center">
        <button type="submit" class="btn btn-primary m-2">Enviar</button>
      </div>
    </form>
  </div>
</div>