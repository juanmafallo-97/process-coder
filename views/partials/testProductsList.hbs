<h1 class="text-center">Lista de Productos de Prueba</h1>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Precio</th>
      <th scope="col">Imagen</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <th scope="row" class="align-middle">{{this.nombre}}</th>
        <td class="align-middle">{{this.precio}}</td>
        <td class="align-middle"><img
            class="product-image"
            src={{this.foto}}
          /></td>
      </tr>
    {{/each}}
  </tbody>
</table>