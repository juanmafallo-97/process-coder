<div class="container my-5">
  <div class="jumbotron">
    <h1>SIGNUP</h1>
    <br />
    <form
      class="form"
      role="form"
      action="/auth/signup"
      method="post"
      autocomplete="off"
    >
      <div class="form-group">
        <input
          name="username"
          placeholder="Nombre de usuario"
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          name="password"
          placeholder="Password"
          class="form-control"
          type="password"
          required
        />
      </div>

      <br />

      <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Singup" />
      </div>
    </form>
  </div>
</div>