<div class="section-container container">
  <h1>Login de Usuario</h1>
  <div class="form-container container">
    <form
      class="form"
      role="form"
      action="/auth/login"
      method="post"
      autocomplete="off"
    >
      <div class="form-group">
        <input
          name="username"
          placeholder="Nombre"
          class="form-control"
          type="text"
          required
        />
      </div>
      <div class="form-group">
        <input
          name="password"
          placeholder="Password"
          class="form-control"
          type="password"
          required
        />
      </div>

      <div class="form-group">
        <input class="btn btn-success my-3" type="submit" value="Login" />
        <a href="/auth/signup" class="btn btn-success m-1"><span>Registro</span>
        </a>
      </div>
    </form>
    <div class="m-auto text-center">
      <a href="/auth/facebook" class="btn btn-primary m-1"><span
          class="fa fa-facebook"
        ></span>
        Login con Facebook</a>
    </div>
  </div>
</div>